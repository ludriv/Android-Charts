<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="PieChartView">

        <!-- start angle in degrees; by default: -90Â° -->
        <attr name="startAngle" format="integer" />
        
        <!-- min = 0 / max in degrees -->
        <attr name="maxDegrees" format="integer" />

        <!-- color for default value or left value -->
        <attr name="defaultColor" format="color" />
        
        <!-- stroke width: 0 for full pie chart, 1+ for just stroke -->
        <attr name="donutStrokeWidth" format="dimension" />
        
        <!-- duration for highlight animation; 250 as default -->
        <attr name="highlightAnimDuration" format="integer" />
        
        <attr name="highlightMode">
            <enum name="one" value="0" />
            <enum name="many" value="1" />
        </attr>
        
    </declare-styleable>
    
</resources>
